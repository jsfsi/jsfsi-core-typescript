{
  "name": "@jsfsi-core/template-rest-api",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "npm run lint && tsc && nest build",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf coverage",
    "db:migrations:generate": "npm run build && export $(cat ./configuration/.env | xargs) && typeorm migration:generate -d ./dist/src/repositories/MigrationsDataSource.js",
    "db:migrations:run": "npm run build && typeorm migration:run -d ./dist/src/repositories/MigrationsDataSource.js -t each",
    "db:migrations:run:local": "export $(cat ./configuration/.env | xargs) && npm run db:migrations:run",
    "dev": "NODE_ENV=development nest start --watch --exec \"node --experimental-print-required-tla\"",
    "docker:build": "docker build -t core-api -f Dockerfile ../..",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "npm run lint:fix && npm run format",
    "lint:fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "start": "nest start",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:dist": "node dist/src/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config ./vitest.integration.config.ts",
    "test:integration:watch": "vitest --config ./vitest.integration.config.ts",
    "test:unit": "vitest run --config ./vitest.unit.config.ts",
    "test:unit:watch": "vitest --config ./vitest.unit.config.ts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@google/genai": "1.38.0",
    "@jsfsi-core/ts-crossplatform": "file:../ts-crossplatform",
    "@jsfsi-core/ts-nodejs": "file:../ts-nodejs",
    "@jsfsi-core/ts-nestjs": "file:../ts-nestjs",
    "@nestjs/axios": "4.0.1",
    "@nestjs/cli": "11.0.16",
    "@nestjs/common": "11.1.12",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.12",
    "@nestjs/platform-express": "11.1.12",
    "@nestjs/typeorm": "11.0.0",
    "axios": "1.13.2",
    "body-parser": "2.2.2",
    "express": "5.2.1",
    "firebase-admin": "13.6.0",
    "pg": "8.17.2",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.28",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@nestjs/testing": "11.1.12",
    "@swc/core": "1.15.10",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.18",
    "supertest": "7.2.2",
    "ts-node": "10.9.2",
    "unplugin-swc": "1.5.9",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  }
}
