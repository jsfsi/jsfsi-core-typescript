{
  "name": "@jsfsi-core/ts-crossplatform",
  "version": "1.1.22",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsfsi/jsfsi-core-typescript.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run lint && tsc && vite build",
    "build:watch": "tsc && (tsc --watch & vite build --watch)",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "npm run lint:fix && npm run format",
    "lint:fix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "uuid": "13.0.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.18",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18"
  }
}
